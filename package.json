{
  "name": "todomvc-flux",
  "version": "0.0.3",
  "description": "Example Flux architecture.",
  "repository": "https://github.com/facebook/flux",
  "main": "js/app.js",
  "dependencies": {
    "flux": "^2.0.1",
    "jquery": "^2.1.3",
    "keymirror": "~0.1.1",
    "object-assign": "^2.0.0",
    "react": "^0.12.2"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "envify": "^3.2.0",
    "jest-cli": "~0.3.0",
    "onchange": "^0.2.0",
    "react-tools": "^0.12.2",
    "reactify": "^1.0.0",
    "uglify-js": "~2.4.16",
    "watchify": "^2.3.0"
  },
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d js/app.js & npm run post-build",
    "build": "NODE_ENV=production browserify js/app.js | uglifyjs -cm > js/bundle.min.js",
    "post-build": "onchange js/bundle.js -- npm test",
    "test": "jest"
  },
  "author": "Bill Fisher",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "test_preprocessor.js",
    "rootDir": "./js",
    "unmockedModulePathPatterns": [
      "node_modules/react"
    ]
  }
}
